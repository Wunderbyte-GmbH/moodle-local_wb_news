{{!
    @template local_wb_news/news

    This template will render the news selection/input form during checkout

    Classes required for JS:
    * none

    Data attributes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * userid the logged in user id

    Example context (json):
    {
        "news": [
            {
                "id": 1,
                "instanceid": 101,
                "bgimage": "path/to/background/image.jpg",
                "icon": "path/to/icon/image.png",
                "userid": 202,
                "headline": "Example Headline",
                "subheadline": "Example Subheadline",
                "description": "<p>This is the news body description.</p>",
                "btnlink": "http://example.com",
                "btntext": "Read More"
            }
        ]
    }

}}

<div class="wb-news-edit-single mt-1" style="z-index: 99">
    <div class="wb-news-addeditbutton btn btn-outline-dark"
        data-action="edit"
        data-id="{{id}}"
        data-instanceid="{{instanceid}}">
          <i class="fas fa-edit"></i>

    </div>
    <div class="wb-news-copybutton btn btn-outline-dark"
        data-action="copy"
        data-id="{{id}}"
        data-instanceid="{{instanceid}}">
          <i class="fas fa-copy"></i>

    </div>
    <div class="wb-news-deletebutton btn btn-outline-dark"
        data-action="delete"
        data-id="{{id}}"
        data-instanceid="{{instanceid}}">
          <i class="fas fa-trash"></i>
    </div>
</div>
