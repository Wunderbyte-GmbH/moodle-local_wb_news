{{!
    @template local_wb_news/bookingoption_description_view

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-region

    Example context (json):
    {
    }
}}

<div class="container-fluid">
    <div class="col-md-9 m-auto">
        <div class="row local-wbnews-row">
            <div class="col-md-7">
                {{#tags}}
                <span class="badge bg-gray badge-pill">
                     {{{.}}}
                </span>
                {{/tags}}
                <div class="row no-gutters wb_news-userinfo">
                    <div class="d-flex flex-grow-1 align-items-end">
                       {{#profileurl}}
                            <img src="{{profileurl}}" class="img-fluid rounded-circle profileimg" alt="Profile Picture">
                        {{/profileurl}}
                        <span class="pl-2 smaller"><b>{{fullname}}</b></span>
                        <span class="smaller pl-2 ml-auto text-black-50">{{{publishedon}}}</span>
                    </div>
                </div>
                <div class="mb-2">
                <div class="title font-weight-normal h2" >{{headline}}</div>
                </div>
                <div class="mb-2">
                <div class="title font-weight-normal h4" >{{subheadline}}</div>
                </div>
                <div class="mb-6">
                <div class="content"><p>{{{description}}}</p></div>
            </div>
        </div>
    </div>
</div>
</div>