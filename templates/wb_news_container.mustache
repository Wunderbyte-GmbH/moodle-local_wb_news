{{!
    @template local_wb_news/wb_news_grid

    Classes required for JS:
    * none

    Example context (json):
    {
        "id": "wbTabs"
        "groupednews": [
            "firstitem": 1
            "news": [
                {
                    'bgimage' => '/local/wb_news/img/wb.jpg',
                    'icon' => '/local/wb_news/img/icon.png',
                    'headline' => 'News 1',
                    'subheadline' => 'Image and Icon',
                    'description' => 'Image and Icon',
                    'btnlink' => 'https://link1.com',
                    'btntext' => 'Read More',
                    'headerimage' => 1
                }
            ]
        ]
    }
}}

<div data-id="wb-news-all-instances-container">
{{#editmode}}
    <div class="wb-news-addeditbutton btn btn-primary"
        data-action="add"
        data-isinstance="true">
        {{#str}} addinstance, local_wb_news {{/str}}
    </div>
    <div class="wb-news-addeditbutton btn btn-primary fa-edit fa"
        data-action="edit"
        data-id="{{instanceid}}"
        data-isinstance="true">
    </div>
    <div class="wb-news-deletebutton btn btn-primary fa-trash fa"
        data-action="delete"
        data-id="{{instanceid}}"
        data-isinstance="true">
    </div>
    <div class="wb-news-copybutton btn btn-primary fa-copy fa"
        data-action="copy"
        data-id="{{instanceid}}"
        data-isinstance="true">
    </div>
{{/editmode}}
{{#instances}}
{{#instancenameonindex}}
<div>
<span class="h4">{{instancenameonindex}}</span> <span>{{shortcode}}</span>
</div>
{{/instancenameonindex}}
   {{#masonrytemplate}}
    {{> local_wb_news/wb_news_masonry}}
   {{/masonrytemplate}}
   {{#gridtemplate}}
    {{> local_wb_news/wb_news_grid}}
   {{/gridtemplate}}
   {{#slidertemplate}}
    {{> local_wb_news/wb_news_slider}}
   {{/slidertemplate}}
   {{#tabstemplate}}
    {{> local_wb_news/wb_news_tabs}}
   {{/tabstemplate}}
   {{#blogtemplate}}
    {{> local_wb_news/wb_news_blog}}
   {{/blogtemplate}}
{{/instances}}
</div>


{{#js}}
    require(['local_wb_news/editnews'], function(fn) {
        fn.init({{instanceid}});
    });
{{/js}}