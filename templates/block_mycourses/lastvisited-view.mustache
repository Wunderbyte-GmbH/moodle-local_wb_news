{{!
    @template block_mycourses/completed-view

    This template renders the completed view for the mycourses block.

    Example context (json):
    {}
}}
<div class="row">
  {{#courses}}
  <div class="col-lg-4 mb-4 mb-md-2">
        <div class="card course-card h-100" role="listitem" data-region="course-content" data-course-id="{{id}}">
            <div class="position-relative">
            <a href="{{url}}" tabindex="-1">
                <div class="card-img-top" style="
                    background-image: url('{{image}}');
                    background-size: cover;
                    background-position: center;
                    background-repeat: no-repeat;">
                    <span class="sr-only">{{fullname}}</span>
                </div>
                <div class="course-card-name bg-primary text-white">{{fullname}}</div>
            </a>
            </div>
        </div>
  </div>
  {{/courses}}

  {{^courses}}
  <div class="col-12 text-center my-4">
    <p class="text-muted">{{#str}} noinprogress, block_mycourses {{/str}}</p>
  </div>
  {{/courses}}
</div>


