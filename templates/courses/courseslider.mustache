{{!
    @template core_course/courseslider

    This template renders the courseslider view for the myoverview block.

    Example context (json):
    {
        "courses": [
            {
                "name": "Assignment due 1",
                "viewurl": "https://moodlesite/course/view.php?id=2",
                "courseimage": "https://moodlesite/pluginfile/123/course/overviewfiles/123.jpg",
                "fullname": "course 3",
                "hasprogress": true,
                "progress": 10,
                "coursecategory": "Category 1"
            }
        ]
    }
}}

<div id="courseCarousel-{{unique}}" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    {{#chunks}}
      <div class="carousel-item{{#first}} active{{/first}}">
        <div class="row">
          {{#courses}}
            <div class="col-md-4">
              {{> local_wb_news/courses/coursecard }}
            </div>
          {{/courses}}
        </div>
      </div>
    {{/chunks}}
  </div>

  <ol class="carousel-indicators">
    {{#chunks}}
      <li data-target="#courseCarousel-{{unique}}" data-slide-to="{{index}}" class="{{#first}}active{{/first}}"></li>
    {{/chunks}}
  </ol>

  <div class="carousel-controls">
    <a class="carousel-control-prev" href="#courseCarousel-{{unique}}" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#courseCarousel-{{unique}}" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

</div>
