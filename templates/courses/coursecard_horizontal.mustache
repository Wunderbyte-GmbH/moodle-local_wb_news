{{!
    @template core_course/coursecard_horizontal

    This template renders the a horizontal card for the course cards.

    Example context (json):
    {
        "courseid": 42,
        "viewurl": "https://moodle.example.com/course/view.php?id=42",
        "courseimage": "https://moodlesite/pluginfile/123/course/overviewfiles/123.jpg",
        "fullname": "Introduction to Computer Science",
        "summary": "This course provides an overview of fundamental computer science principles, including algorithms, data structures."
    }
}}
<li class="list-course-card d-flex flex-row align-items-stretch list-unstyled mt-2" data-region="course-content" data-course-id="{{courseid}}">
    <!-- Image Section -->
    <div class="col-md-3 p-0">
        <a href="{{viewurl}}" tabindex="-1">
            <div class="h-100 w-100" style="background-image: url('{{courseimage}}'); background-size: cover; background-position: center;"></div>
        </a>
    </div>
    
    <!-- Content Section -->
    <div class="col-md-9 d-flex flex-column justify-content-between p-4">
        <h3 class="fw-bold">{{fullname}}</h3>
        <p class="text-muted">{{{summary}}}</p>
        
        <div>
            <a href="{{viewurl}}" class="btn btn-primary">{{#str}} tocourse, local_wb_news {{/str}}</a>
        </div>
    </div>
</li>
